<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.burnskids.eclipse.sass.editor.core.SassNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.dltk.core.language">
      <language
            class="com.burnskids.eclipse.sass.editor.core.SassLanguageToolkit"
            nature="com.burnskids.eclipse.sass.nature"
            priority="0">
      </language>
   </extension>
   <extension
         point="org.eclipse.dltk.ui.language">
      <language
            class="com.burnskids.eclipse.sass.editor.core.SassUILanguageToolkit"
            nature="com.burnskids.eclipse.sass.nature"
            priority="0">
      </language>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="scss"
            id="com.burnskids.eclipse.sass.content-type"
            name="SASS"
            priority="normal">
      </content-type>
   </extension>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.burnskids.eclipse.sass.editor.ui.SassEditor"
            contributorClass="org.eclipse.dltk.internal.ui.editor.BasicScriptEditorActionContributor"
            default="true"
            icon="icons/colorized.png"
            id="com.burnskids.eclipse.sass.editor"
            name="Sass Editor">
         <contentTypeBinding
               contentTypeId="com.burnskids.eclipse.sass.content-type">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.burnskids.eclipse.sass.editor.preferences.SassPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.burnskids.eclipse.sass.editor.preferences.SassGlobalPreferencesPage"
            id="com.burnskids.eclipse.sass.preferences"
            name="SASS">
      </page>
      <page
            category="com.burnskids.eclipse.sass.preferences"
            class="com.burnskids.eclipse.sass.editor.preferences.SassEditorPreferencesPage"
            id="com.burnskids.eclipse.sass.preferences.editor"
            name="Editor">
      </page>
      <page
            category="com.burnskids.eclipse.sass.preferences.editor"
            class="com.burnskids.eclipse.sass.editor.preferences.SassEditorSyntaxColoringPreferencesPage"
            id="org.deved.antlride.ui.preferences.editor.syntaxColoring"
            name="Syntax Coloring">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonFilter
            activeByDefault="true"
            description="Hides .sass-cache directories"
            id="com.burnskids.eclipse.sass.filters.sasscache"
            name="SASS cache files">
         <filterExpression>
            <adapt
                  type="org.eclipse.core.resources.IResource">
               <test
                     property="org.eclipse.core.resources.name"
                     value=".sass-cache">
               </test>
            </adapt>
         </filterExpression>
      </commonFilter>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="com.burnskids.eclipse.sass.filters.sasscache">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
</plugin>
